<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="24dp"
        android:paddingEnd="20dp"
        android:paddingBottom="24dp"
        tools:context=".view.pattern.FrgDailyLifePattern">

        <TextView
            android:id="@+id/tvTodayTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/today_depression_title"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTodayDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp"
            tools:text="2025-12-11 기준" />

        <TextView
            android:id="@+id/tvTodayScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/today_depression_score_placeholder"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="오늘의 우울 점수는 36점이에요!" />

        <TextView
            android:id="@+id/tvPreviousTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/previous_depression_title"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPreviousScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:overScrollMode="never"
            tools:listitem="@layout/item_depression_score" />

        <TextView
            android:id="@+id/tvEmptyPrevious"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/depression_score_empty"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>
</ScrollView>
